// +resets

* 
    margin: 0
    padding: 0

body 
    font-size: 18px
    font-family: 'Open Sans', sans-serif;

h1
h2
h3
h4
h5
h6
    font-family: 'Oswald', sans-serif;

img 
    width: 300px
    max-width: 100%

article 
    width: 100%

a 
    color: inherit;
    transition: all .2s

// -resets

// +widgets

.text-center
    text-align: center

    *
        text-align: center
.list
    margin: 0
    padding: 0
    list-style-type: none

    .list-item
        margin: 0
        padding: 0
        line-height: 1.7em

        &>.list
            list-style-type disc
            text-align: left
            padding-left: 45px
            .list-item
                text-align: left 

    &.list-horizontal
        vertical-align: top

        &>.list-item
            vertical-align: top
            display: inline-block
    &.list-equal-5
        &>.list-item
            width: 32%

            &.wide
                width: 100%

.icon
    width: 40px
    height: 40px
    display: inline-block
    // background-color: black;
    background-size: 100%

    &.fb
        background-image: url("/imgs/facebook.svg")
    &.leetcode
        background-image: url("/imgs/leetcode.png")
    &.github
        background-image: url("/imgs/github.svg")
    &.linkedin
        background-image: url("/imgs/linkedin.svg")
    &.www
        background-image: url("/imgs/www.jpeg")
        border-radius: 5px

.half
    display: inline-block
    width: 49%
// +widgets

nav
    background-color:#404040
    text-align: center
    font-size: 1.1em
    position: fixed
    z-index: 10000
    width: 100%
    top: 0
    text-transform: uppercase
    
    .list 
        display: inline-block
        font-size: 0

        .list-item 
            font-size: 1.3rem
            border-left: 1px solid rgba(255, 255, 255, 0.3)
            &:last-of-type 
                border-right: 1px solid rgba(255, 255, 255, 0.3)
    a
        color: white
        text-decoration: none
        display: inline-block
        margin: 0
        padding: 10px 15px
        transition: all .2s

        &:hover 
            background-color: rgba(255, 255, 255, 0.3)
            text-decoration: none

.content
    width:  100%
    max-width: 960px
    margin: 0 auto
    padding: 45px 0;
    padding-top: 80px

    h1
        font-size: 2.6em
        text-align: center
        margin-bottom: 20px
        color: #bd2438;
        text-transform: uppercase;

    h2
        font-size: 2.2em;
        font-weight: normal;
        border-bottom: 1px solid #ddd;
        margin-bottom: 10px;
        line-height: normal;

    h3
        font-size: 1.3em;
        font-weight: normal;

    h4
        font-size: 1.1em;
        font-weight: normal;
        opacity: 0.7;
    
    a:hover
        color: #bd2438;

.intro
    background-image: url(/imgs/background.jpg);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
    display: table
    color: #fff

    .img-container
    .info
        display: table-cell

    .img-container
        width: 40%

        img
            border-radius: 50%
    
    h1
        text-align: left
        color: #fff
        text-transform: none
    .info
        vertical-align: top
        position relative
        height: 100%

        padding-left: 45px

        font-size: 1.5em

        .list-item
            line-height: 1.6em
            font-size: 0.8em

        // a
        //     text-decoration: underline

    
    .buttons
        position: absolute
        bottom: -25px;
        padding-top: 40px;
    a:hover
        color: #bd2438;

.work
    h2
    h3
    h4
        text-align: center
        margin-top: 15px
    
    .list
        width: 100%
        max-width: 640px
        margin: 30px auto


        .list
            list-style-type: disc

        .list-item
            line-height: 1.6em
            margin-top: 25px

            .list-item
                margin-top: 0

.tech
    background: #bd2438
    color: #fff

    h1
        color: #fff

    h2
        border-color: #d25c6c;

    .list
        &>.list-item
            margin-top: 15px

        .list
            .list-item
                margin: 0
                line-height: 1.7em

.education
    .list
        .list-item
            vertical-align: top

.achievements
    background-image: url(../imgs/background.jpg)
    background-position: center
    background-repeat: no-repeat
    background-size: cover
    background-attachment: fixed
    color: #fff

    .list
        width: 100%
        max-width: 640px
        display inline-block
        text-align: left

        .list-item
        p
            text-align: left
        
        .list
            display inline-block

    h1
        color: #fff
    
@media only screen and (max-width: 768px)
    body 
        font-size: 0.9em;
    nav .list,
        .list 
            .list-item
                font-size: 1rem

    .intro
        display: block
        padding: 0 20px
        box-sizing: border-box

        h1 
            font-size: 2em
            line-height: 1.2em

        .img-container
            width: 35%;
        
    .img-container
    .info
        display: inline-block

    .work
        text-align: center

        .list
            list-style-type: none !important

@media only screen and (max-width: 425px)
	.content
        padding: 40px 10px
        box-sizing: border-box

    .intro
        h1
            text-align: center
        .img-container
        .info
            display: block
            width: 100%
            text-align: center
            padding: 0
            font-size: 1em

            .img-container
                max-width: 200px;
                margin: 0 auto;

            .list-item
                font-size: 1em
            .buttons
                margin-top: 0
                position: static
    nav
        .list-item 
            font-size: 0.7rem !important

            a
                padding: 5px 10px

    .list.list-equal-5>.list-item
        width: 100% !important;
    .tech .list.list-equal-5>.list-item
        width: 47% !important

        &.wide
            width: 100% !important

    .list .list-item>.list
        box-sizing: border-box

    .achievements
        .list
            max-width: 90%
    .half
        width: 100%